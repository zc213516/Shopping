<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_topic_home"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_topictitle_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="测试一下标题"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_topic_home"
        app:layout_constraintTop_toBottomOf="@id/iv_topic_home" />

    <TextView
        android:id="@+id/tv_topicprice_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:text="测试一下价格"
        android:textColor="#FF0000"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_topictitle_home"
        app:layout_constraintLeft_toRightOf="@id/tv_topictitle_home"
        app:layout_constraintTop_toTopOf="@id/tv_topictitle_home" />

    <TextView
        android:id="@+id/tv_topicintro_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="测试一下介绍"
        app:layout_constraintLeft_toLeftOf="@id/tv_topictitle_home"
        app:layout_constraintTop_toBottomOf="@id/tv_topictitle_home" />
</androidx.constraintlayout.widget.ConstraintLayout>